<%- include("../partials/header", { title: "Reset Password" }) %>

<div class="container my-5 d-flex justify-content-center">

    <div class="card shadow-sm p-4 text-center"
         style="width:100%; max-width:420px; border-radius:8px;">

        <!-- Lock Icon -->
        <div class="mb-3">
            <i class="bi bi-lock-fill fs-3 text-secondary"></i>
        </div>

        <!-- Title -->
        <h5 class="fw-semibold">Create New Password</h5>
        <p class="text-muted small mb-4">
            Your new password must be different from previously used passwords.
        </p>

        <form>

            <!-- New Password -->
            <div class="mb-3 text-start position-relative">
                <label class="form-label small">New Password</label>
                <input type="password"
                       class="form-control form-control-sm"
                       placeholder="Enter new password">
                <i class="bi bi-eye position-absolute"
                   style="right: 10px; top: 38px; cursor:pointer;"></i>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3 text-start position-relative">
                <label class="form-label small">Confirm Password</label>
                <input type="password"
                       class="form-control form-control-sm"
                       placeholder="Confirm new password">
                <i class="bi bi-eye position-absolute"
                   style="right: 10px; top: 38px; cursor:pointer;"></i>
            </div>

            <!-- Password Rules -->
            <div class="bg-light p-3 rounded small text-start mb-3">
                <strong>Password must contain:</strong>
                <ul class="mb-0 mt-2 ps-3">
                    <li>At least 8 characters</li>
                    <li>One uppercase letter</li>
                    <li>One lowercase letter</li>
                    <li>One number</li>
                    <li>One special character</li>
                </ul>
            </div>

            <!-- Button -->
            <button type="submit" class="btn btn-dark w-100 btn-sm">
                Reset Password
            </button>

            <!-- Back -->
            <p class="small mt-3 mb-0">
                <a href="/signin" class="text-decoration-none">
                    ‚Üê Back to Login
                </a>
            </p>

        </form>

    </div>

</div>

<%- include("../partials/footer") %>
