<%- include("../partials/header", { title: "Forgot Password" }) %>

<div class="container my-5 d-flex justify-content-center">

    <div class="card shadow-sm p-4 text-center" 
         style="width:100%; max-width:420px; border-radius:8px;">

        <!-- Icon -->
        <div class="mb-3">
            <i class="bi bi-key-fill fs-3 text-secondary"></i>
        </div>

        <!-- Title -->
        <h5 class="fw-semibold">Forgot Password</h5>
        <p class="text-muted small mb-4">
            Enter your email address and we'll send you an OTP to reset your password
        </p>

        <form>

            <!-- Email -->
            <div class="mb-3 text-start">
                <label class="form-label small">Email Address</label>

                <div class="position-relative">
                    <i class="bi bi-envelope position-absolute"
                       style="top: 50%; left: 10px; transform: translateY(-50%); color: gray;"></i>

                    <input type="email"
                           class="form-control form-control-sm ps-4"
                           placeholder=" Enter your email address">
                </div>
            </div>

            <!-- Button -->
            <button type="submit" class="btn btn-dark w-100 btn-sm">
                Send OTP
            </button>

            <!-- Remember -->
            <p class="small mt-3 mb-0">
                Remember your password?
                <a href="/signin" class="text-decoration-none">Sign in</a>
            </p>

        </form>

        <!-- Security Note -->
        <div class="bg-light p-3 mt-4 rounded text-start small">
            <strong>Security Notice:</strong><br>
            We'll send a 6-digit OTP to your email. The code will expire in 10 minutes for your security.
        </div>

    </div>

</div>

<%- include("../partials/footer") %>
