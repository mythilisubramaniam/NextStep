<%- include('../partials/header', { title: 'Forgot Password - Next Step' }) %>

<style>
    .forgot-container {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        margin: 20px auto;
    }

    .input-group-text {
        background-color: #fff;
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
    }

    input::placeholder {
        font-size: 0.9rem;
    }

    .alert-light {
        background: #f5f5f7;
        color: #444;
    }

    @media (max-width: 768px) {
        .forgot-container {
            width: 90%;
            margin: 0 auto;
        }
    }

    @media (max-width: 480px) {
        .forgot-container {
            max-width: 99%;
            padding: 1rem;
        }
        .forgot-container h5 {
            font-size: 1rem;
        }
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh; padding-top: 20px;">
    <div class="forgot-container p-4">
        <div class="text-center mb-4">
            <i class="fas fa-key fa-2x mb-2"></i>
            <h5>Forgot Password</h5>
            <p class="text-muted">Enter your email address and we'll send you an OTP to reset your password</p>
        </div>

        <% if (error) { %>
        <div class="alert alert-danger text-center">
            <%= error %>
        </div>
        <% } %>

        <form method="POST" action="/sendOtp">
            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0">
                    <i class="fas fa-envelope"></i>
                </span>
                <input type="email" class="form-control border-start-0" 
                       name="email" placeholder="Enter your email address" required />
            </div>

            <button class="btn btn-dark w-100" type="submit">Send OTP</button>

            <p class="text-center mt-3">
                Remember your password? 
                <a href="/signin" style="color: #212529; text-decoration: none; font-weight: 500;">Sign in</a>
            </p>
        </form>

        <div class="alert alert-light mt-3 small d-flex align-items-center gap-2">
            <i class="fas fa-info-circle"></i>
            <span>We'll send a 6-digit OTP to your email. The code will expire in 10 minutes for your security.</span>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
